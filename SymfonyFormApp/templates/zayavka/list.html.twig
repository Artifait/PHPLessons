{% extends 'base.html.twig' %}

{% block title %}Заявки{% endblock %}

{% block body %}
<style>
    .zayavki-wrapper {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    .zayavki-wrapper h1 {
        text-align: center;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #f9f9f9;
    }

    thead {
        background-color: #4CAF50;
        color: white;
    }

    th, td {
        padding: 12px 15px;
        border: 1px solid #ddd;
        text-align: left;
    }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #e0f7fa;
    }

    td {
        word-break: break-word;
    }
</style>

<div class="zayavki-wrapper">
    <h1>Список заявок</h1>

    <table>
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Сообщение</th>
            </tr>
        </thead>
        <tbody>
            {% for zayavka in zayavki %}
                <tr>
                    <td>{{ zayavka.name }}</td>
                    <td>{{ zayavka.email }}</td>
                    <td>{{ zayavka.message }}</td>
                </tr>
            {% else %}
                <tr><td colspan="3">Нет заявок</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
